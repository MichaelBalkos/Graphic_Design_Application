<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxWidth="300.0" minWidth="300.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="application.controllers.ImageOptionsController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <VBox prefWidth="115.0">
               <children>
                  <Label prefHeight="25.0" text="Image">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <VBox>
               <children>
                  <Button fx:id="image_BTN" mnemonicParsing="false" prefHeight="26.0" prefWidth="149.0" text="Change Path">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <Separator prefWidth="200.0" />
      <HBox alignment="CENTER">
         <children>
            <VBox prefWidth="115.0">
               <children>
                  <Label fx:id="shapeWidth_LBL" prefHeight="25.0" text="Image Width">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="height_LBL" prefHeight="25.0" text="Image Height" />
                  <Label fx:id="rotation_LBL" prefHeight="25.0" text="Image Rotation">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <VBox>
               <children>
                  <Slider fx:id="width_S" max="400.0" min="50.0">
                     <VBox.margin>
                        <Insets bottom="20.0" top="15.0" />
                     </VBox.margin>
                  </Slider>
                  <Slider fx:id="height_S" max="400.0" min="50.0">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Slider>
                  <Slider fx:id="rotation_S" max="360.0" />
               </children>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <HBox alignment="CENTER">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <children>
            <Label fx:id="imageMessage_LBL" wrapText="true">
               <HBox.margin>
                  <Insets top="20.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </children>
</VBox>
